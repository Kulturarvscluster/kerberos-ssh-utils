#!/usr/bin/env bash

switch_user(){
    local newUser="$1"
    local globalTicket="/tmp/krb5cc_$UID"
    local userTicket="/tmp/${newUser}_kac.ticket"
    klist -c "${userTicket}" -s || kinit -c "${userTicket}" "${newUser}@KAC.SBLOKALNET"
    rm -f "$globalTicket"
    ln -s "${userTicket}" "$globalTicket"
}

